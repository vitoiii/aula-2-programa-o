4) def celsius_para_fahrenheit():
    # Solicita ao usuário a temperatura em Celsius
    celsius = float(input("25.0°C"))
    
    # Converte a temperatura para Fahrenheit
    fahrenheit = (celsius * 9/5) + 32
    
    # Exibe o resultado
    print(f"{celsius}°C equivalem a {fahrenheit}°F")

# Chama a função
celsius_para_fahrenheit()
25.0°C equivalem a 77.0°F

5) def coletar_nomes():
    nomes = []  # Lista para armazenar os nomes

    while True:
        nome = input("Digite um nome (ou 'sair' para encerrar): ")
        if nome.lower() == 'sair':  # Verifica se o usuário digitou 'sair'
            break
        nomes.append(nome)  # Adiciona o nome à lista

    print("\nNomes digitados:")
    for nome in nomes:
        print(nome)

# Chama a função
coletar_nomes()
igite um nome (ou 'sair' para encerrar): João
Digite um nome (ou 'sair' para encerrar): Maria
Digite um nome (ou 'sair' para encerrar): sair

